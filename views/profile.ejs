<%- include('header.ejs') %>
<style>
  .profile {
    margin-top: -100px;
  }
</style>
<div class="container my-5 pt-5">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-10">
      <!-- Page title -->
      <div class="my-5">

      </div>
      <div class="card">
        <!--img-->
        <div class="rounded-top-3" style='background-image: url("<%= userProfile && userProfile.cover ? userProfile.cover : images/cover.png %>");background-position: center;background-size:
                        cover;background-repeat:no-repeat; height: 250px;'>
        </div>

        <div class="card-body p-md-5">
          <div class="d-flex flex-column gap-5">
            <!--img-->
            <div class="mt-n8 profile">
              <img src="<%= userProfile && userProfile.profile ? userProfile.profile : 'images/profile.png' %>" alt="mentor 1" class="rounded-4 mt-n8 " height="150">
            </div>
            <div class="d-flex flex-column gap-5">
              <div class="d-flex flex-column gap-3">
                <div class="d-flex flex-md-row flex-column justify-content-between gap-2">
                  <!--heading-->
                  <div>
                    <small class="fw-medium text-gray-800"></small>
                    <h1 class="mb-0">
                      <%= userProfile ? userProfile.fullname : "" %>
                      <span class="fs-6">
                        (<%= userProfile ? userProfile.pronouns : "" %>)
                      </span>
                    </h1>

                    <!--content-->
                    <div class="d-flex flex-lg-row flex-column  pe-5">

                      <small class="fw-medium text-success bio-txt fst-italic lh-sm">
                        <%= userProfile ? userProfile.bio : '' %>
                      </small>
                    </div>
                  </div>
                  <!--button-->
                  <div class="d-flex flex-row gap-3 align-items-center">
                    <a href="#!" class="btn btn-outline-white">
                      <span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart-fill me-1" viewBox="0 0 16 16">
                          <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314">
                          </path>
                        </svg>
                      </span>
                      Save
                    </a>
                    <a href="#!" class="btn btn-outline-white">Ask questions</a>
                  </div>
                </div>
                <div class="d-flex flex-md-row flex-column gap-md-4 gap-2">
                  <div class="d-flex flex-row gap-2 align-items-center lh-1">

                    <span class="fa-stack ">
                      <a href="<%= userProfile ? userProfile.facebook : '#' %>">
                        <i class="fas fa-circle fa-stack-2x text-secondary"></i>
                        <i class="fab fa-facebook-f fa-stack-1x"></i>
                      </a>
                    </span>
                    <span class="fa-stack">
                      <a href="<%= userProfile ? userProfile.twitter : '#' %>">
                        <i class="fas fa-circle fa-stack-2x text-secondary"></i>
                        <i class="fab fa-twitter fa-stack-1x"></i>
                      </a>
                    </span>
                    <span class="fa-stack">
                      <a href="<%= userProfile ? userProfile.linkedin : '#' %>">
                        <i class="fas fa-circle fa-stack-2x text-secondary"></i>
                        <i class="fab fa-linkedin-in fa-stack-1x"></i>
                      </a>
                    </span>
                    <span class="fa-stack">
                      <a href="<%= userProfile ? userProfile.instagram : '#' %>">
                        <i class="fas fa-circle fa-stack-2x text-secondary"></i>
                        <i class="fab fa-instagram fa-stack-1x"></i>
                      </a>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-1"></div>
  </div>
  <hr class="my-4 w-75 mx-auto border border-4 border-info shadow-lg">

  <div class="row ">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">
      <% userBlogs.forEach(function(blog) { %>
      <!-- Featured blog post -->
      <div class="card mb-5">
        <div class="row">
          <div class="col-md-8">
            <div class="card-body p-4">
              <h4 class="mb-3">
                <%= blog.blogTitle %>
              </h4>
              <p class="small"><i class="far fa-star fa-lg"></i> <span class="mx-2">|</span>
                Created by <strong>
                  <%= blog.writerName || "Unknown" %>
                </strong> on
                <%= blog.blogDate%>
              </p>
              <hr class="my-1">
              <div class="d-flex justify-content-start align-items-center">
                <p>
                  <%= blog.blogDescription.substring(0, 100) %>...
                </p> <!-- Show first 100 chars -->
              </div>
              
              <div class="d-flex justify-content-start align-items-center ">
                <p class="mb-0 text-uppercase"><i class="fas fa-cog me-2"></i> <span
                        class="text-muted small">8 min
                        read</span></p>
                <p class="mb-0 text-uppercase"><i class="fas fa-link ms-4 me-2"></i> <span
                        class="text-muted small">1 day ago</span></p>
                <p class="mb-0 text-uppercase"><i class="fas fa-ellipsis-h ms-4 me-2"></i>
                    <span class="text-muted small"><a href="/blog/<%= blog.blogSlug %>">Read More</a></span>
                    <span class="ms-3 me-4">|</span>
                </p>
                <a href="#!">
                    <img src="<%= blog.profileImage || 'images/default-blog.png' %>"
                        alt="avatar" class="img-fluid rounded-circle me-3" width="50" style="width: 40px;height: 40px;">
                </a>
                <button type="button" data-mdb-button-init data-mdb-ripple-init
                    class="btn btn-outline-dark btn-sm btn-floating">
                    <i class="fas fa-plus text-body"></i>
                </button>
            </div>

            </div>
          </div>
          
          <div class="col-md-4 pe-5">
            <div class="py-5">
              <a href="/blog/<%= blog.slug %>">
                <img src="<%= blog.blogImage || 'images/default-blog.png' %>" alt="blog image" class="img-fluid">
              </a>
            </div>
          </div>
        </div>
      </div>
      <% }) %>

    </div>
    <div class="col-lg-1"></div>
  </div>
</div>
<%- include('footer') %>
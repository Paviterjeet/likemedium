<%- include('header') %>
        <!-- Header -->
        <header class="ex-header">
            <div class="container">
                <div class="row">
                    <div class="col-xl-10 offset-xl-1">
                        <h1 class="text-center">Sign Up</h1>
                    </div> <!-- end of col -->
                </div> <!-- end of row -->
            </div> <!-- end of container -->
        </header> <!-- end of ex-header -->
        <!-- end of header -->
        
        
        <!-- Basic -->
        <div class="ex-form-1 pt-5 pb-5">
            <div class="container">
                <div class="row">
                    <div class="col-xl-6 offset-xl-3">
                        <div class="text-box mt-5 mb-5">
                            <p class="mb-4">Fill out the form below to sign up for the service. Already signed up? Then just <a class="blue" href="/login">Log In</a></p>

                            <!-- Sign Up Form -->
                            <form action="/signup/submit" method="post">
                                <% if (typeof error !== "undefined" && error !== '') { %>
                                    <p style="color: red;" id="errorMsg"><%= error %></p>
                                <% } %>
                            
                                <div class="mb-4 form-floating">
                                    <input type="email"  id="email" class="form-control <%= error ? 'border-danger' : '' %> " name="email" placeholder="name@example.com" value="<%= email ? email : '' %>" onfocus="hideErrorMsg()" required>
                                    <label for="floatingInput">Email address</label>
                                </div>
                                <div class="mb-4 form-floating">
                                    <input type="text" class="form-control" name="fullname" placeholder="Your name" value="<%= fullname ? fullname : '' %>" required>
                                    <label for="floatingInput">Your Full name</label>
                                </div>
                                <div class="mb-4 form-floating">
                                    <input type="password" class="form-control" name="password" placeholder="Password" required>
                                    <label for="floatingPassword">Password</label>
                                </div>
                                <div class="mb-4 form-floating">
                                    <input type="text" class="form-control" name="mobile" placeholder="Mobile Number" value="<%= mobile ? mobile : '' %>" maxlength="12" pattern="[0-9]{10,12}" title="Enter 10 to 12 digits only" required>
                                    <label >Mobile Number</label>
                                </div>
                                <div class="mb-4 form-check">
                                    <input type="checkbox" class="form-check-input" id="exampleCheck1" required>
                                    <label class="form-check-label" for="exampleCheck1">I agree with the site's stated <a href="privacy.html">Privacy Policy</a> and <a href="terms.html">Terms & Conditions</a></label>
                                </div>
                                <button type="submit" class="form-control-submit-button">Sign up</button>
                            </form>
                            <!-- end of sign up form -->

                        </div> <!-- end of text-box -->
                    </div> <!-- end of col -->
                </div> <!-- end of row -->
            </div> <!-- end of container -->
        </div> <!-- end of ex-basic-1 -->
        <!-- end of basic -->
        <%- include('footer') %>
        <script>
            function hideErrorMsg(){
                $("#errorMsg").css("display","none");
                $("#email").removeClass("border-danger");
            }
        </script>